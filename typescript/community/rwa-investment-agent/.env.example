# AI Provider Configuration
# Choose your preferred AI provider for intelligent RWA analysis

# OpenRouter (supports multiple models)
OPENROUTER_API_KEY=your-openrouter-api-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Perplexity (great for real-time market analysis)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Provider Selection (optional)
# If not set, the first available provider will be used
AI_PROVIDER=openrouter

# Model Selection (optional)
# If not set, the default model for the selected provider will be used
AI_MODEL=google/gemini-2.5-flash

# RWA Protocol API Keys
# Centrifuge Protocol
CENTRIFUGE_API_KEY=your-centrifuge-api-key
CENTRIFUGE_ENDPOINT=https://api.centrifuge.io

# Maple Finance
MAPLE_API_KEY=your-maple-api-key
MAPLE_ENDPOINT=https://api.maple.finance

# Goldfinch Protocol
GOLDFINCH_API_KEY=your-goldfinch-api-key
GOLDFINCH_ENDPOINT=https://api.goldfinch.finance

# Blockchain Configuration
# Ethereum Mainnet RPC (for most RWA protocols)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Polygon RPC (for some RWA protocols)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# Arbitrum RPC (for cross-chain operations)
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-api-key

# Compliance & KYC Configuration
# KYC Provider (for regulatory compliance)
KYC_PROVIDER_API_KEY=your-kyc-provider-key
KYC_PROVIDER_ENDPOINT=https://api.kyc-provider.com

# Regulatory Jurisdiction (US, EU, UK, etc.)
REGULATORY_JURISDICTION=US

# Compliance Level (RETAIL, ACCREDITED, INSTITUTIONAL)
COMPLIANCE_LEVEL=RETAIL

# Risk Management Configuration
# Maximum position size as percentage of portfolio
MAX_POSITION_SIZE=0.25

# Maximum portfolio allocation to RWA assets
MAX_RWA_ALLOCATION=0.50

# Minimum credit rating for institutional loans
MIN_CREDIT_RATING=BBB

# Portfolio Management
# Default investment strategy (CONSERVATIVE, BALANCED, AGGRESSIVE)
DEFAULT_STRATEGY=BALANCED

# Rebalancing frequency in hours
REBALANCING_FREQUENCY=24

# Yield harvesting threshold (minimum yield to trigger harvest)
YIELD_HARVEST_THRESHOLD=0.01

# Monitoring & Alerts
# Webhook URL for portfolio alerts
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Email notifications
NOTIFICATION_EMAIL=your-email@example.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook

# Development Configuration
# Server port
PORT=3008

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable development mode features
DEV_MODE=true

# Mock mode (for testing without real API calls)
MOCK_MODE=false